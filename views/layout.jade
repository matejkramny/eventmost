html
	head
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8;")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title EventMost - Login
		link(href="/favicon.ico", type="image/x-icon", rel="icon")
		link(href="/favicon.ico", type="image/x-icon", rel="shortcut icon")
		block css
			link(rel="stylesheet", href="/bootstrap/css/bootstrap.css")
			link(rel="stylesheet", href="/bootstrap/css/bootstrap-responsive.css")
			link(rel="stylesheet", href="/bootstrap/css/prettify.css")
			link(rel="stylesheet", href="/css/flat-ui.css")
			link(rel="stylesheet", href="/css/site.css")
	body
		block container
			.container
				#header
					.navbar
						.navbar-inner
							.container
								button.btn.btn-navbar(type="button", data-toggle="collapse", data-target="#navbar-collapse")
								a.brand(href="/") EventMost
								
								.nav-collapse.collapse#navbar-collapse
									ul.nav
										li
											a(href="/about") About
										li
											a(href="/events/near") Events near you
									ul.nav.pull-right
										li
											a(href="/messages")
												span.fui-mail
												span.hidden-desktop Messages
												span.navbar-new 1
										if everyauth.loggedIn == true
											li
												a(href="/profile")= user.getName()
										else
											li
												a(href="/") Guest
				block content
			.bottom-menu
				.container
					.row
						.span2.brand
							a(href="/") EventMost
						.span8
							ul.bottom-links
								li
									a(href="/about") About
								li
									a(href="/contact") Contact us
						.span2
							ul.bottom-links
		block js