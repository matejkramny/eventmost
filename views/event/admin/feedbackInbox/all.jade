extends ../../../responsive

include ../../inc/navbar
include ../../inc/attendee

include inc/message
include inc/card
include inc/savedProfile

append meta
	meta(name='feedback_id', content='#{feedbackProfile._id}')

append addonjs
	script(src="/js/takeoverProfile.js", defer)

block content
	+navbar
	.clearfix
	include navbar
	
	.clearfix
	
	//- end inbox title plus buttons
	
	.nspacer

	.col-md-12.col-xs-12.col-sm-12
		.font-tw
			b Private messages
		.line-purple

		//- guest speakers
	.col-md-12.col-xs-12.col-sm-12.hide-mini3-except-smart
	if locals.topics.length > 2
		//| Needs new page
	
	if (locals.topics.length > 0)
		+message(locals.topics[0])
		if locals.topics.length > 1
			.nspacer
			+message(locals.topics[1])
		if locals.topics.length > 2
			a(href="messages", style="margin-left:30px;") #{locals.topics.length-2} more recent conversations
		// Maybe we should have something like: a(href='inbox/messages') Click to view all
	else
		p.text-center No Private messages
	
	//- end guest speakers

	.center(style='height:35px;')
		ul.pagination
			li
				a(href='#') «
			li.active
				a(href='#') 1
			li
				a(href='#') »

	.col-md-12.col-xs-12.col-sm-12
		.font-tw
			b Business cards received
		.line-purple

	.clearfix
	.nspacer

	//- business
	
	if (locals.feedbackProfile.user.receivedCards.length == 0)
		p.text-center No cards received
	
	for card in locals.feedbackProfile.user.receivedCards
		+card(card)	
	//- end business

	.clearfix
	.nspacer-medium
	if (locals.feedbackProfile.user.receivedCards.length > 2)
		//Link to view all
	.center(style='height:35px;')
		ul.pagination
			li
				a(href='#') «
			li.active
				a(href='#') 1
			li
				a(href='#') »
	.clearfix

	.col-md-12.col-xs-12.col-sm-12
		.font-tw
			b Those who saved your profile
		.line-purple
	.clearfix
	.nspacer

	//- saved
	if (locals.savers.length == 0)
		p.text-center No one has saved your profile yet.
		.clearfix
		.nspacer

	.col-md-12.col-xs-12.col-sm-12
		.center
			for saver in locals.savers
				+savedProfile(saver)
		.clearfix
		.nspacer
	
	.center(style='height:35px;')
		ul.pagination
			li
				a(href='#') «
			li.active
				a(href='#') 1
			li
				a(href='#') »
	.clearfix

	.col-md-12.col-xs-12.col-sm-12
		.font-tw
			b Public messages
		.line-purple
	.clearfix
	.nspacer
	
	//What are public messages?
	p.text-center No Public Messages.
	.clearfix
	.nspacer
	.line-purple

	
	.col-sm-12.col-xs-12.col-md-12
		.center	 
			.inline.nspacer-small
				button.btn.btn-primary.font-e2.hide-prof-butt(type='submit', data-toggle="modal", href="#takeoverModal", style="height:95px; width:100%; border-radius: 10px; color:#fff; padding:20px;")
					| Invite someone to take over this profile
			.inline.nspacer-small.pad-on-smart
	include inc/takeoverModal