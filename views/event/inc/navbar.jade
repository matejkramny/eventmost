mixin navbar
	- var base = "/event/"+ev._id+"/";
	
	//- inbox title plus buttons
	.nspacer
	.row
		.col-md-12.col-xs-12.col-sm-12
			a(href=base, class="link-purple", style="font-size: 25px; padding: 0 0 0 10px;")
				.pull-left.linknamewidth.pad-left-zero.left.inline.nspacer-small.font-exception(type='submit', style="")
					if (typeof hideArrow === "undefined" || hideArrow == false)
						| &#8592 
					| #{ev.name}
			.pull-right
				if eventadmin
					.inline.nspacer-small.pad-right-five
						.font-x1.bg-purple.center.psev2.prof-wall
							.dropdown(style="padding:0;")
								a.link-white(href data-toggle="dropdown")
									| Planner
									br
									| Options
									img.pad-left-ten(src="/images/menu-profile.svg")
								ul.dropdown-menu.mif-dropdown(style="background-color:rgb(118,239,139); padding:0; margin-top:15px; margin-left:-15px;")
									li.inverted: a(href=base+"admin/panel") Edit Event/Ticket Details
									li.inverted: a(href=base+"admin/panel") Admin Powers/Controls
									li.inverted: a(href=base+"admin/logos") Edit Event Appearance
									li.inverted: a(href=base+"admin/summary") Event Analytics/Ticket Sales
									li(style="text-align:center;"): a(href=base+"admin/feedback")
										i.fa.fa-star.fa-fw
										|  Feedback Profiles 
										i.fa.fa-star.fa-fw
									li: a(href=base+"admin/register") Check People In
									li: a(href=base+"admin/email") Send Mass Private Messages
				
				.inline.nspacer-small.pad-right-five
					.font-x1.bg-purple.center.psev2.prof-wall
						a.link-white(href= (eventattending == true ? base+"attendee/"+attendee._id : base+"attendees")) My profile <br />
							img(src="/images/menu-profile.svg", alt="", style="")
				.inline.nspacer-small.pad-right-five
					.font-x1.bg-purple.psev2.prof-wall
						a.link-white(href=base+"registrationpage") Registration
							br
							| page
							img.pad-left-ten(src="/images/menu-registration.svg", alt="", style="")
				.inline.nspacer-small
					.font-x1.bg-purple.center.psev2.prof-wall
						a.link-white(href=base+"dropbox") Event dropbox <br />
							img(src="/images/menu-drop.svg", alt="", style="")
			.clearfix
	.clearfix
