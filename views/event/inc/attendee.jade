mixin attendee(attendee, feedbackEditLink)
	if (typeof feedbackEditLink === 'undefind')
		- feedbackEditLink = false;
	
	.col-sm-4.col-xs-4.col-md-4.nspacer
		div(class= attendee.user._id.equals(user._id) ? "grey-rounded-box" : null)
			.pull-left.circle-avatar-new
				img.image-circle-avatar-new(src= attendee.user.avatar.length == 0 ? "/images/default_speaker-purple.svg" : attendee.user.avatar)
			.pull-left.center.font-exception-thin.width-attendees.pad-left-ten
				.font20a.nspacer.font-exception
					| #{ attendee.category }
				//- font-change script added when to long name font size changes like in example
				a.bold.break.color-green.font-change.font-attendee.font-exception(href="/event/"+ev._id+"/attendee/"+attendee._id)
					| #{ attendee.user.getName() }
				.bold.break.font-change.font-attendee.font-exception
					if(attendee.user.position.length > 0 && attendee.user.company.length > 0)
						| - #{attendee.user.position}, #{attendee.user.company}
					else if(attendee.user.position.length > 0)
						| - #{attendee.user.position}
					else if(attendee.user.company.length > 0)
						| - #{attendee.user.company}
	
	//-
		//-desktop
		.col-md-4.col-xs-4.col-sm-4.hide-mini3-except-smart
			.pull-left(style="width:30%; overflow:hidden; border-radius:51px; -webkit-border-radius: 51px; -moz-border-radius:51px;width:102px;height:102px;border:1px solid #333;")
				img(src= attendee.user.avatar.length == 0 ? "/images/default_speaker-purple.svg" : attendee.user.avatar, style="max-width:102px;margin:-1px auto auto -1px;")
			.font-e.pull-left.break.nspacer.center(style="width:70%;")
				.font-evente.font-exception-thin.deifer-font3
					= attendee.category
				a(href="/event/#{ev._id}/"+(feedbackEditLink ? "admin/feedback/" : "attendee/")+attendee._id): b= attendee.user.getName()
				br
				if(attendee.user.position.length > 0 && attendee.user.company.length > 0)
					| - #{attendee.user.position},<br/> #{attendee.user.company}
				else if(attendee.user.position.length > 0)
					| - #{attendee.user.position}
				else if(attendee.user.company.length > 0)
					| - #{attendee.user.company}
		//-mobile
		.col-md-6.col-xs-6.col-sm-6.hide-all2
			.pull-left(style="width:30%;")
				img.circularespond-small.img-responsive(src= attendee.user.avatar.length == 0 ? "/images/default_speaker-purple.svg" : attendee.user.avatar)
			.font-e.pull-left.break.nspacer.center(style="width:70%;")
				.font-evente.font-exception-thin.deifer-font3
					= attendee.category
				a(href="/event/#{ev._id}/"+(feedbackEditLink ? "admin/feedback" : "attendee")+"/"+attendee._id ): b= attendee.user.getName()
				br
				if(attendee.user.position.length > 0 && attendee.user.company.length > 0)
					| - #{attendee.user.position},<br/> #{attendee.user.company}
				else if (attendee.user.position.length > 0)
					| - #{attendee.user.position}
				else if (attendee.user.company.length > 0)
					| - #{attendee.user.company}