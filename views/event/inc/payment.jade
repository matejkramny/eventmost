.eighty-five(ng-controller="PaymentController" ng-init="init({ id: '#{ev._id}', csrf: '#{token}', event_date: '#{event_date}' })")
	.center2
		.half-round2
			.half-round-purple
				b Registration Information
	table.gridtable-payment-yellow
		tr
			th REGISTRATION TYPE
			th SALES END
			th PRICE
			th FEE
			th QUANTITY
		tr(ng-repeat="ticket in tickets")
			td
				span(ng-show="ticket.type == 'custom'") {{ticket.customType}}
				span(ng-show="ticket.type != 'custom'") {{ticket.type}}
			td {{ event_date }}
			td £{{ ticket.priceFormatted }}
			td £{{ ticket.priceWithFeeFormatted }}
			td.col-sm-2.col-lg-2.col-md-2.col-xs-4: input.form-control(type="number" step="1" min="0" ng-model="ticket.wantedQuantity" ng-init="ticket.wantedQuantity = 0" max="{{ticket.quantity}}" ng-change="updateTotal()")
		tr
			td Total
			td
			td: b £{{totalPriceFormatted}}
			td
			td: b {{totalQuantity}}

