extends ../responsive

include inc/navbar
include inc/attendee
include inc/message

append addonjs
	//-include inc/mapjs

block content
	+navbar
	
	case ev.sponsorLayout.layout
		when 0
			include layouts/0
		when 1
			include layouts/1
		when 2
			include layouts/2
		when 3
			include layouts/3
		when 4
			include layouts/4
		when 5
			include layouts/5

	//- arrange by tablet-portrait	
	.col-xs-12.hide-all2.here-show(style="height:50px; margin-top:0px;")
			.pull-right.font-exception-thin
				ul.nav.navbar-nav.nav-ashen
					li.dropdown
						a.dropdown-toggle.dropdown-toggle-ashen(href='#', data-toggle='dropdown')
							| Arrange by
							b.caret
						ul.dropdown-menu.dropdown-menu-ashen.pull-right
							li
								a(href='') Most recent to latest
							li
								a(href='') Latest to most recent
							li
								a(href='') Events name A-Z
							li
								a(href='') My planned events
	.clearfix.here-show

	- var lastMessage = ev.messages.length > 0 ? ev.messages[ev.messages.length-1] : null;
	//- most recent large
	if lastMessage
		+message(lastMessage, true)

	//- arrange by large	
	.nspacer.pull-right.font-bigs.font-thin.don-show-here(style="height:50px; margin-top:80px;")
				.pull-right.mfresponsive2.font-exception-thin
					ul.nav.navbar-nav.nav-ashen
						li.dropdown
							a.dropdown-toggle.dropdown-toggle-ashen(href='#', data-toggle='dropdown')
								| Arrange by
								b.caret
							ul.dropdown-menu.dropdown-menu-ashen.pull-right
								li
									a(href='') Most recent to latest
								li
									a(href='') Latest to most recent
								li
									a(href='') Events name A-Z
								li
									a(href='') My planned events

	.clearfix
	.nspacer

	.col-md-12.col-xs-12.col-sm-12
		.line-purple

	//- guest speakers large
	for attendee in ev.attendees
		+attendee(attendee)
	
	.clearfix



	.nspacer
	.col-md-12.col-xs-12.col-sm-12
		.line-purple
	//- end guest speakers

	.pull-right(style='height:35px;')
		ul.pagination
			li
				a(href='#') «
			li.active
				a(href='#') 1
			li
				a(href='#') »
	
	.clearfix
	.nspacer

	
	.col-sm-12.col-xs-12.col-md-12
		.pull-left
			img.pull-left.bubble-responsive(src="/images/bubble-left-blue.svg", alt="", style="vertical-align:top;")
		.pull-left.bg-green.psev.post-width-text
			form#commentForm(action="/event/"+ev._id+"/messages", method="POST")
				input(type="hidden", name="_csrf", value=token)
				textarea.postcommentarea(placeholder="Post a comment here...", name="message")
				.pull-right
					a(href="#", onclick="$('#commentForm').submit(); return false;")
						img.img-responsive.post-butt(src="/images/post-button.svg")
		.clearfix
		.nspacer
		.pull-right
			button.btn.btn-default.font-e.hide-prof-butt(type='submit', style="border-radius: 10px; color:#fff; padding:20px;")
				a(href="/" class="btn btn-default font-e") Exit event
	.clearfix