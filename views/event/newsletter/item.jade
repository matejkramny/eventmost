mixin newsletterItem(item)
	tr
		td
			table(width="100%",border="0",cellspacing="0" cellpadding="0")
				tr
					td(width="52%")
						div(style="margin-left:10px;  padding:0px 10px 0px 0px;border-radius:90px; margin-bottom:10px; margin-right:10px;")
							table(width="100%",border="0",cellspacing="0",cellpadding="0")
								tr
									td(width="40%",align="center",style="border-right: 1px solid #E6E7E8")
										img(src="#{item.avatar}"  ,height="90",max-width="100%")
									td(valign="middle",width="60%",background="" align="left")
										div(style="background: #e6e7e8 0 0; border-radius: 0 90px 90px 0; float: left; margin: 0 0 0 20px; padding: 20px 10px; width: 78%;")
											.bold.font-exception(style="font-size:14px;")
												| #{item.name}
											div(style="float:left")
												.font-exception
													| #{item.position}
											.break.font-change.font-attendee.font-exception(style="float:left; clear:both; font-size:14px")
												| #{item.company}
					td(width="48%")
						if(item.card && item.card != '')
							img(src="#{item.card}", style="max-height:200px; width:100%")
							
						else
							div(style="margin-top:10px; padding-right:10px")
								| #{item.message}
							div(style="margin-top:10px")
								a(href="#",style="color:#0992A3; font-weight:bold")
									img(src="/images/reply.png",style="padding-right:10px "  width="40" align="left")
									div(style="margin:10px 0px 0px 0px; float:left")
										| Reply