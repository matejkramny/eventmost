extends base

block addonjs
	script(src="/js/getNearbyEvents.js")

append content
	include inc/flash
	.avatar2.headerSpacer 
		a(href="/profile")
			img(src=user.avatar, alt="")
	.right.span13p
		.orangebox.inh
			a.link4(href="/event/add") Create event 
			.box
			.iconbox
				img(src="/img/people.svg", alt="")
				.center event
			.iconbox
				img(src="/img/meetup.svg", alt="")
				.center meetup
			.iconbox
				img(src="/img/conference.svg", alt="")
				.center conference
			.iconbox
				img(src="/img/other.svg", alt="")
				.center other
	
	//- User card
	.avatar.redbox
		p.prof= user.getName()
		.box2
			.left
				img(src="/img/i.svg", alt="")
			.set
				a.link4(href="/profile", alt="", title="") Edit profile
			if user.admin
				.set
					a.link4(href="/admin", alt="", title="") Administration
		img(src="/img/card.svg", alt="")
		a.link4(href="/cards", alt="", title="")
			| Choose your bussines card
		.headerSpacer
		.clearfix
		.box2
			.left
				img(src="/img/i.svg", alt="")
			.set
				a.link4(href="", alt="", title="", data-reveal-id="NotificationModal")
					| Notification settings
		.clearfix
		.box2
			.left
				img(src="/img/i.svg", alt="")
			.set
				a.link4(href="", alt="", title="", data-reveal-id="PrivacyModal")
					| Privacy settings
		.clearfix
		a(href="/logout", class="logout") Logout
	
	//- Events nearby
	a(href="/events/near", alt="Events Nearby")
		.span7p
			h6 Events<br /> nearby
			img(src="/img/map-icon2.svg", alt="", class="arrow")
	//- Events
	a(href="/events", alt="Events")
		.span7p.yellow
			h5 All<br /> events
			img(src="/img/arrow_big.svg", alt="", class="arrow")
	.clearfix
	

	
	//- My Events
	.bluebox
		a.link4(href="/events/my") My events
		.right.arrange
			| Arrange by
		.clearfix
		.right
			dl.dropdown
				dt
					a.dropx(href="#")
						| select
				dd
					ul
						li
							a(href="#",) Most recent to latest
						li
							a(href="#",) Latest to most recent
						li
							a(href="#",) Events name A-Z
						li.border_bottom
							a(href="#") My planned events
	- var myeventsi = 0;
	for event in myevents
		.row-fluid
			.events
				.span1p
					img(src="/img/map-icon.svg", alt="",)
				.span1
					img.minus(src=event.avatar, alt="")
				.span8p
					a(href="/event/"+event._id)
						h8= event.name
					p.eventtext= event.description
				.right_star
					img(src="/img/martini.svg", alt="", class="arrow")
				.right_star
					.image2
						img.image2(src="/img/calendar-icony.svg", alt="")
						h16= event.start.getDate()
							| .
							= event.start.getMonth()+1
							br
							= event.start.getFullYear()
				.right_star
					.left
						img(src="/img/clock.svg", alt="", class="arrow")
					.left.date #{event.start.getHours()}:#{event.start.getMinutes()}
						br
						| (BST)
				.left.headerSpacer
					.left
						img(src="/img/map6.svg", alt="", class="arrow")
					.left.location
						if event.address && event.address.length > 0
							h1= event.address
						else
							h1 Location unavailable
		- if (++myeventsi < myevents.length)
			.line
		- else
			br
		.clearfix
	if myevents.length == 0
		.row-fluid
			.span12
				p.text-center.eventtext You have no events
	
	.bluebox
		a.link4(href="/events/near") Events nearby
		.right.arrange
			| Arrange by
		.clearfix
		.right
			dl.dropdown
				dt
					a(href="#", class="dropx") 
						| select
				dd
					ul
						li
							a(href="#",) Most recent to latest
						li
							a(href="#",) Latest to most recent
						li
							a(href="#",) Events name A-Z
						li.border_bottom
							a(href="#") My planned events
	.row-fluid#nearbyEventsPlaceholder
		.span12
	#NotificationModal.reveal-modal
		h1 Notification settings:
		.center2
			| <b>My email account can recive notification</b> <br /> <b>of receipt of a ____________ in EventMost:</b>
		.pop-input.center.headerspacer2
			.left.right-al
				| Private message
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
			.left.right-al
				| Business Card
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
			.left.right-al
				| Comment on my wall
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
			.left.right-al
				| Someone saved my profile
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
		.center2
			| <b>My mobile device, via the EventMost app,</b> <br /> <b>can receive a push notification of a ____________ <br /> in EventMost:</b>
		.pop-input.center.headerspacer2
			.left.right-al
				| Private message
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
			.left.right-al
				| Business Card
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
			.left.right-al
				| Comment on my wall
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
			.left.right-al
				| Someone saved my profile
			.left.switches
				label.checkbox.toggle.candy(style='width: 100px;', onclick='')
					input(type='checkbox', class="invisible")
					span
						span No
						span Yes
					a.slide-button
			.clearfix
		.center2
			| <b>My mobile device, via the EventMost app, can receive push notification of a message deemed important by the Event Planner?</b>
		.center2.turn
			label.checkbox.toggle.candy(style='width: 100px;', onclick='')
				input(type='checkbox', class="invisible")
				span
					span No
					span Yes
				a.slide-button
			.clearfix
		.center2
			input.enter2(type="submit", value="Sumbit" )
		.clearfix
		a(href="/", class="close-reveal-modal") 
			img(src="/img/x.svg")


	#PrivacyModal.reveal-modal
		h1 Privacy settings:
		.center2
			| Allow people to private message me?
		.center2.turn2
			label.checkbox.toggle.candy(style='width: 100px;', onclick='')
				input(type='checkbox', class="invisible")
				span
					span No
					span Yes
				a.slide-button
			.clearfix
		.center
			| Allow people to comment on my wall?
		.center2.turn2
			label.checkbox.toggle.candy(style='width: 100px;', onclick='')
				input(type='checkbox', class="invisible")
				span
					span No
					span Yes
				a.slide-button
			.clearfix
		.center
			| Turn off location ability <br />(you will not be able to find Events in range)?
		.center2.turn2
			label.checkbox.toggle.candy(style='width: 100px;', onclick='')
				input(type='checkbox', class="invisible")
				span
					span No
					span Yes
				a.slide-button
			.clearfix
		.center
			| Do not show my profile in events. 
			h2 !(You will not be able to see other attendees or access event information and documents other than the event description and location.)!
		.center2.span4
			.left
				input.enter3(type="submit", value="Don't show" )
			.right
				input.enter3(type="submit", value="Show" )
		.clearfix
		.center2
			input.enter3(type="submit", value="SUMBIT" )
		.clearfix
		a(href="/", class="close-reveal-modal") 
			img(src="/img/x.svg")