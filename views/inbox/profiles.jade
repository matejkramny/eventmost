extends ../responsive

include inc/savedProfile

block content
	include navbar
	
	.nspacer
	//- People who saved your profile
	.col-md-12.col-xs-12.col-sm-12
		.font-tw
			b Those who saved your profile
		.line-purple
	.clearfix
	.nspacer
	.center
		for saver in locals.profileSavers
			+savedProfile(saver)
	if (locals.profileSavers.length == 0)
		b(style="margin-left: 30px;") No Saved Profiles.
	.clearfix
	.nspacer-big
	//- Your Saved Profiles
	.col-md-12.col-xs-12.col-sm-12
		.font-tw
			b Profiles you saved
		.line-purple
	.clearfix
	.nspacer
	.center
		for profile in locals.user.savedProfiles
			+savedProfile(profile)
	if (locals.user.savedProfiles.length == 0)
		b(style="margin-left: 30px;") No Saved Profiles.
		.clearfix
		.nspacer
	
	.clearfix
