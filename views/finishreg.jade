extends layout

append content
	include inc/sidebar
	#main-content
		.search-box#bigred
			.search-content
				p
					span.title Enable email notifications
		#info-page.users.form
			.clear
			p You are nearly done. However, you won't be able to receive email notifications until you enter your email address.
			br
			form(action="/auth/finish", method="POST")
				input(type="hidden", name="_csrf", value=token)
				input.rounded-input(type="email", name="email", placeholder="Email address (optional)", style="width: 400px;")
				input.submit-btn(type="submit", value="Submit")
				a.submit-btn(href="/") No thanks
	.clear