extends responsive

append addonjs
	if (theUser._id.equals(user._id) && typeof ev !== "undefined")
		script(src="/js/eventLandingPage.js" defer)

block content
	if (typeof ev !== "undefined")
		include event/inc/navbar
		+navbar
		.clearfix.hide-all2
		br
	
	.nspacer
	.row
		.col-md-12.col-xs-12.col-sm-12
			.pull-left
				.font-s.big-pad-left
					b #{theUser.getName()}
					if (theUser.position)
						| - #{theUser.position}
					if (theUser.company)
						| , #{theUser.company}
		.clearfix
	
	.nspacer
	.col-md-2.col-xs-2.col-sm-2.hide-mini3-except-smart
		.pull-right
			img.img-responsive.prof-width(src= theUser.avatar.length == 0 ? "/images/default_speaker.svg" : theUser.avatar)
	.col-md-4.col-xs-4.col-sm-4.hide-mini3-except-smart
		.nspacer
		.pull-left.font-s.text-right.nspacer-small-m(style="width:30%;")
			| Website: 
			br
		.pull-right.font-s.pad-left-ten.break.nspacer-small-m(style="width:70%;")
			b #{theUser.website}
		.clearfix
		.pull-left.font-s.text-right.nspacer-small-m(style="width:30%;")
			| Location: 
			br
		.pull-right.font-s.pad-left-ten.break.nspacer-small-m(style="width:70%;")
			b #{theUser.location}
		.clearfix
		.pull-left.font-s.text-right.nspacer-small-m(style="width:30%;")
			| Interests: 
			br
		.pull-right.font-s.pad-left-ten.break.nspacer-small-m(style="width:70%;")
			b #{theUser.interests}
		.clearfix
		.pull-left.font-s.text-right.nspacer-small-m(style="width:30%;")
			| Education: 
			br
		.pull-right.font-s.pad-left-ten.break.nspacer-small-m(style="width:70%;")
			b #{theUser.education}
		.clearfix
		.nspacer
			if (theUser._id.equals(user._id))
				a(class="link1" href="/profile")
					button.btn.btn-primary.font-x.sp-margin(style=" padding:10px; padding-left:25px; padding-right:25px; text-align:center;")
						.pull-left
							| Edit<br/>My Profile
						.pull-right
							img(src="/images/edit-my-prof2.svg", alt="", class="inline pad-left-ten res-butt edito" style="max-width:50px;")
	if (!theUser._id.equals(user._id))
		.col-md-6.col-xs-6.col-sm-6.lower.hide-mini3-except-smart
			.right.iconsbox.spacerbig
				a.link1(href="/inbox/messages/new?to="+theUser._id)
					img.img-responsive.inline.pad-right-ten.res-butt(src="/images/send-prv.svg")
				a(href="/cards/send?to="+theUser._id, class="link1")
					img(src="/images/send-business.svg", alt="", class="img-responsive inline pad-right-ten res-butt")
				a(href="/user/"+theUser._id+"/save", class="link1")
					img(src="/images/save-prof.svg", alt="", class="img-responsive inline pad-right-ten res-butt")
		.col-md-6.col-xs-6.col-sm-6.lower-hide.hide-except-smart
			.right.iconsbox.spacerbig
				a(href="/inbox/messages/new?to="+theUser._id, class="link1")
					img(src="/images/send-prv.svg", alt="", class="img-responsive inline res-butt")
				a(href="/cards/send?to="+theUser._id, class="link1")
					img(src="/images/send-business.svg", alt="", class="img-responsive inline res-butt")
				a(href="/user/"+theUser._id+"/save", class="link1")
					img(src="/images/save-prof.svg", alt="", class="img-responsive inline res-butt")
		.hide-except-smart
			.center
				a(href="/inbox/messages/new?to="+theUser._id, class="link1")
					img(src="/images/send-prv.svg", alt="", class="img-responsive inline res-butt pad-left-five")
				a(href="/cards/send?to="+theUser._id, class="link1")
					img(src="/images/send-business.svg", alt="", class="img-responsive inline res-butt pad-left-five")
				a(href="/user/"+theUser._id+"/save", class="link1")
					img(src="/images/save-prof.svg", alt="", class="img-responsive inline res-butt pad-left-five")
		if (typeof ev !== 'undefined' && typeof eventadmin !== 'undefined')
			//- Make administrator button
			if (eventadmin == true && theAttendee.admin == false && theAttendee.user.isFeedbackProfile == false)
				.clearfix
				br
				.col-md-offset-10.col-xs-offset-10.col-sm-offset-10.col-md-2.col-xs-2.col-sm-2.lower.hide-mini3-except-smart
					.right.iconsbox.spacerbig
						a(href="/event/#{ev._id}/admin/addAdmin/#{theAttendee._id}", class="link1")
							button.btn.btn-primary.font-x(style="width:100%; padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align:center;")
								| Make<br/>Administrator
							.nspacer-small
				.col-md-offset-10.col-xs-offset-10.col-sm-offset-10.col-md-2.col-xs-2.col-sm-2.lower-hide.hide-except-smart
					.right.iconsbox.spacerbig
						a(href="/event/#{ev._id}/admin/addAdmin/#{theAttendee._id}", class="link1")
							button.btn.btn-primary.font-x(style="width:100%; padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align: center;")
								| Make Event<br/>Administrator
							.nspacer-small
				.hide-except-smart
					.center
						a(href="/event/#{ev._id}/admin/addAdmin/#{theAttendee._id}", class="link1")
							button.btn.btn-primary.font-x(style="width:125px; padding:10px; padding-left:25px; padding-right:35px; margin-right:20px;")
								| Make Event<br/>Administrator
							.nspacer-small
			//- feedback profile button
			if (eventadmin == true && theAttendee.user.isFeedbackProfile == true && ev._id.equals(theAttendee.user.feedbackProfileEvent))
				.clearfix
				br
				.col-md-offset-10.col-xs-offset-10.col-sm-offset-10.col-md-2.col-xs-2.col-sm-2.lower.hide-mini3-except-smart
					.right.iconsbox.spacerbig
						a(href="/event/#{ev._id}/admin/feedback/#{theAttendee._id}", class="link1")
							button.btn.btn-primary.font-x(style="width:100%; padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align:center;")
								| Edit feedback<br/>profile
							.nspacer-small
				.col-md-offset-10.col-xs-offset-10.col-sm-offset-10.col-md-2.col-xs-2.col-sm-2.lower-hide.hide-except-smart
					.right.iconsbox.spacerbig
						a(href="/event/#{ev._id}/admin/feedback/#{theAttendee._id}", class="link1")
							button.btn.btn-primary.font-x(style="width:100%; padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align: center;")
								| Edit feedback<br/>profile
							.nspacer-small
				.hide-except-smart
					.center
						a(href="/event/#{ev._id}/admin/feedback/#{theAttendee._id}", class="link1")
							button.btn.btn-primary.font-x(style="width:125px; padding:10px; padding-left:25px; padding-right:35px; margin-right:20px;")
								| Edit feedback<br/>profile
							.nspacer-small
	else
		.row
			- var offset = "col-md-offset-4 col-xs-offset-4 col-sm-offset-4";
			if (typeof ev !== "undefined")
				- offset = "";
				.col-md-6.col-xs-6.col-sm-6.lower.hide-mini3-except-smart
					.font-event.font-exception
						| In this event you are showing up as a:
					.color-grey2.italic.font-event.font-exception
						| "Guest Speaker"
					.pull-left.font-event.nspacer-medium.font-exception
						| Would you like to:
					.pull-left.iconsbox.spacerbig.big-pad-left
						a(class="link1" data-toggle="modal" href="#attendModal")
							button.btn.btn-primary.font-x(style=" padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align:center;")
								| Change My<br/>Category
							.nspacer-small
				.col-md-6.col-xs-6.col-sm-6.lower-hide.hide-except-smart
					.font-e2.font-exception
						| In this event you are showing up as a:
					.color-grey2.italic.font-e2.font-exception
						| "Guest Speaker"
					.pull-left.font-e2.nspacer-medium.font-exception
						| Would you like to:
					.pull-left.iconsbox.spacerbig.big-pad-left
						a(class="link1" data-toggle="modal" href="#attendModal")
							button.btn.btn-primary.font-x(style=" padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align:center;")
								| Change My<br/>Category
							.nspacer-small
				.hide-except-smart.col-md-12.col-xs-12.col-sm-12
					.font-e2.font-exception
						| In this event you are showing up as a:
					.color-grey2.italic.font-e2.font-exception
						| "Guest Speaker"
					.pull-left.font-e2.nspacer-medium.font-exception
						| Would you like to:
					.pull-left.iconsbox.spacerbig.big-pad-left
						a(class="link1" data-toggle="modal" href="#attendModal")
							button.btn.btn-primary.font-x(style=" padding:10px; padding-left:25px; padding-right:35px; margin-right:20px; text-align:center;")
								| Change My<br/>Category

	
	.nspacer.hide-except-smart
	.col-md-4.col-xs-4.col-sm-4.hide-except-smart
		img(src= theUser.avatar.length == 0 ? "/images/default_speaker.svg" : theUser.avatar, alt="", class="circularespond img-responsive")
	.col-md-8.col-xs-8.col-sm-8.hide-except-smart
		.text-right.font-s.nspacer-bigger
			| <b>#{theUser.getName()}</b> - #{theUser.position}, #{theUser.company}<br />
			img(src="/images/message-icon-small.svg", alt="", class="pad-right-ten")
			a(href="mailto:#{theUser.email}", class="link-purple")
			| #{theUser.email}
		.clearfix

	.clearfix
	.nspacer-big

	.col-md-12.col-xs-12.col-sm-12.font-s.center.hide-except-smart
	.hide-all3
	.col-md-12.col-xs-12.col-sm-12.font-s.hide-except-smart
			.pull-left.text-right(style="width:20%;")
				| Website: <br />
			.pull-right.pad-left-ten.break.left(style="width:80%;")
				| <b><a href="#{theUser.website}" class="link-purple">#{theUser.website}</a></b> 
			.clearfix
			.pull-left.text-right(style="width:20%;")
				| Location: <br />
			.pull-right.pad-left-ten.break.left(style="width:80%;")
				| <b>#{theUser.location}</b> 
			.clearfix
			.pull-left.text-right(style="width:20%;")
				| Interests: <br />
			.pull-right.pad-left-ten.break.left(style="width:80%;")
				| <b>#{theUser.interests}</b> 
			.clearfix
			.pull-left.text-right(style="width:20%;")
				| Educaction: <br />
			.pull-right.pad-left-ten.break.left(style="width:80%;")
				| <b>#{theUser.education}</b> 
			.clearfix

	
	.clearfix
	.nspacer
	if (primaryCard != null)
		.col-md-4.col-xs-4.col-sm-4
			img.img-responsive(src="/businesscards/"+primaryCard._id+".png")
		.clearfix
		.nspacer-big
	if (theUser._id.equals(user._id))
		.col-md-4.col-xs-4.col-sm-4
			a.btn.btn-primary2.font2.color-grey2.font-exception(href="/cards/choosePrimary" style="margin-left:7px; padding:10px; padding-left:25px; padding-right:25px; text-align:center;")
				.pull-left
					if (primaryCard != null)
						| change your 
					else
						| choose a 
					| primary<br/>Business card
		.clearfix
		.nspacer-big

	.col-md-7.col-xs-7.col-sm-7.hide-mini3-except-smart(style="margin-left:7px;")
		.font-e1
			| Description: 
		.font-x
			!= theUser.desc
	.clearfix
	
	if (theUser.desc > 0)
		.col-md-12.col-xs-12.col-sm-12.hide-except-smart
				.font-e1
					| Description: 
				.font-x
					!= theUser.desc

	.clearfix
	
	if (theUser._id.equals(user._id) && typeof ev !== "undefined")
		include modals/registration