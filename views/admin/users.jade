extends layout

block content
	h2= users.length
		|  Users
	table.table
		thead
			tr
			th Name
			th Surname
			th Email
			th Created
			th Twitter
			th Facebook
			th LinkedIn
			th Admin
			th Remove
		tbody
		for user in users
			tr
				td= user.name
				td= user.surname
				td= user.email
				td= user.created.getDate()
					| /
					= user.created.getMonth()+1
					| /
					= user.created.getFullYear()
					|  
					= user.created.getHours()
					| :
					= user.created.getMinutes()
				td
					if user.twitter.userid == null
						span
					else
						span.glyphicon.glyphicon-ok
				td
					if user.facebook.userid == null
						span
					else
						span.glyphicon.glyphicon-ok
				td
					if user.linkedin.userid == null
						span
					else
						span.glyphicon.glyphicon-ok
				td
					if user.admin == false
						span
					else
						span.glyphicon.glyphicon-ok
				td
					a.btn.btn-danger(href="/admin/users/#{user._id}/remove")
						span.glyphicon.glyphicon-remove
						span Remove