extends layout

block content
	h2= users.length
		|  Users
	table.table
		thead
			tr
				th Name
				th Surname
				th Email
				th Created
				th Twitter
				th Facebook
				th LinkedIn
				th Admin?
		tbody
			for user in users
				tr
					td= user.name
					td= user.surname
					td= user.email
					td= user.created.toString()
					td
						if user.twitter.userid == null
							span
						else
							span.glyphicon.glyphicon-ok
					td
						if user.facebook.userid == null
							span
						else
							span.glyphicon.glyphicon-ok
					td
						if user.linkedin.userid == null
							span
						else
							span.glyphicon.glyphicon-ok
					td
						if user.admin == false
							span
						else
							span.glyphicon.glyphicon-ok