extends responsive

append content
	h1.text-center
		| Enter Your New Password:
	.row
		.col-md-6.col-lg-6.col-sm-6.col-lg-offset-3.col-md-offset-3.col-sm-offset-3
			form(action="/auth/password_reset/"+pid, method="POST")
				input(type="hidden", name="_csrf", value=token)
				br
				.formStatus.center= message
				.pop-input.center
					input.login(name="password" placeholder="New Password" type="password", required="required")
				.pop-input.center
					input.btn.btn-primary.font.font-ah(type='submit' value="RESET")
				.clearfix