#loginModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="", aria-hidden="true")
	.modal-dialog
		.modal-content
			.modal-body.reveal-modal
				h1 Log In
				form#LoginForm(action="/auth/password", method="POST")
					input(type="hidden", name="_csrf", value=token)
					.row
						.col-md-7.col-sm-7.col-lg-7
							.pop-input.font-e.font-reg(style="text-align:right;")
								span(style="position:relative; top:5px; right:15px; font-size: 20px;") Recommended 
								i.fa.fa-hand-o-right(style="font-size:40px; position:relative; top:10px; right: 10px;")
						.col-xs-2
						.col-md-5.col-sm-5.col-lg-5.col-xs-10(style="padding-left:0;padding-top:10px;")
							.pop-input.font-e.font-reg
								a.pad-left-ten(href="/auth/facebook")
									img(src="/images/face-icon.svg" style="width:50px;")
								a.pad-left-ten(href="/auth/twitter")
									img(src="/images/twit-icon.svg" style="width:50px;")
								a.pad-left-ten(href="/auth/linkedin")
									img(src="/images/in-icon.svg" style="width:50px;")
					.clearfix
					br
					.formStatus.center
					.pop-input.center
						input.login#LoginUserEmail(name="login", ng-model="email", placeholder="email", type="email", required="required")
					.pop-input.center
						input.pass#LoginUserPassword(name="password", placeholder="password", type="password", required="required")
					.pop-input.center
						button.btn.btn-primary.font.font-ah(type='submit', authentication-login)
							| ENTER
					.clearfix
				.clearfix
				.pop-input.center
					| Want to 
					a.link-purple#openRegisterModal(href="#") create an account? 
				a(href="#" class="close-reveal-modal" data-dismiss="modal")
					img(src="/images/x.svg")
			
#signModal.modal.fade(tabindex="-1", role="dialog", aria-labelledby="", aria-hidden="true")
	.modal-dialog
		.modal-content
			.modal-body.reveal-modal
				h1 Register
				form#RegisterForm(action="/auth/password", method="POST")
					input(type="hidden", name="_csrf", value=token)
					.pop-input.center.font-e.font-reg(style="margin-top:15px; font-size:15px;")
						span(style="position:relative; top:5px; right:15px; font-size: 20px;") Recommended 
						i.fa.fa-hand-o-right(style="font-size:40px; position:relative; top:10px; right: 10px;")
						a.pad-left-ten(href="/auth/facebook")
							img.icon-min(src="/images/face-icon.svg" style="width:50px;")
						a.pad-left-ten(href="/auth/twitter")
							img.icon-min(src="/images/twit-icon.svg" style="width:50px;")
						a.pad-left-ten(href="/auth/linkedin")
							img.icon-min(src="/images/in-icon.svg" style="width:50px;")
					.clearfix
					br
					.formStatus.center
					.pop-input.center
						input.name#RegisterUserName(name="name", placeholder="name", maxlength="128", type="text",)
					.pop-input.center
						input.login#RegisterUserEmail(name="login", ng-model="email", placeholder="email", maxlength="128", type="email", required="required", )
					.pop-input.center
						input.pass#RegisterUserPassword(name="password", placeholder="password", type="password", required="required",)
					.pop-input.center
						button.btn.btn-primary.font.font-ah(type='submit', href="",)
							| REGISTER
					.clearfix
					.pop-input.center
						a.link-purple#openLoginModal(href="#") Already Registered?
					a(href="#", class="close-reveal-modal", data-dismiss="modal")
						img(src="/images/x.svg")