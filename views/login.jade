extends responsive

include event/inc/item



append content
	.row
		.col-sm-12.col-lg-12.col-md-12.col-xs-12
			.alert.alert-warning
				h4 Under Construction
				p EventMost is currently under construction, for such reasons using the site may be unstable and unsuitable for hosting production events. Please check back soon!
	br
	.row
		.col-sm-8.col-md-8.col-lg-8.pad-left-zero
			form(method="GET", accept-charset="utf-8", action="/search/")
				input.pull-left.font-s.search-input.pad-left-ten.header-links(type="search", name="q", placeholder="search event by location, organizers, or key words", style="width:75%; height:50px; border-radius:0px;", value= typeof search !== "undefined" ? search.query : null)
				input.gonew2.pull-left.header-links(type="submit", value="GO", style="width:10%;")
	.nspacer
	.row
		#slidenav
		.otherabsolute
			#open
				a.fc-button(href="", style="background-color:#d1d2d4; color: #542437; text-decoration: none; text-align:left; padding-right:85px;") calendar<br> settings
		#calendar
	.nspacer
	.row
		.col-md-3.col-sm-3.col-lg-3
			p.lead Search Options
			form(action="/search/" method="GET")
				input.form-control.font-s.search-input.header-links(type="search", name="q", placeholder="Search Key words" value= typeof search !== "undefined" ? search.query : null)
				.clearfix
				.radio
					label
						input(type="radio" name="type" value="events" checked = search.type == 'events' ? 'checked' : null)
						|  Events
				.radio
					label
						input(type="radio" name="type" value="people" checked = search.type == 'people' ? 'checked' : null)
						|  People
				br
				.center
					button.btn.btn-default Search!
				.clearfix
		.col-md-9.col-sm-9.col-lg-9
			p.lead #{search.results.length} Search Results
			if search.results.length == 0
				p.lead There are no #{search.type} for your search criteria
			if (search.type == 'people')
				for p in search.results
					.row
						a.col-md-2.col-sm-2.col-lg-2(href="/user/"+p._id)
							img.circularespond(src= p.avatar.length > 0 ? p.avatar+"-116x116.png" : "/images/default_speaker.svg")
						.col-md-10.col-sm-10.col-lg-10
							.row
								h4.col-md-12.col-sm-12.col-lg-12
									a(href="/user/"+p._id): strong= p.getName()
							.row
								strong.col-md-12.col-sm-12.col-lg-12
									if(p.position)
										= p.position
										| , 
									if(p.company)
										= p.company
										| , 
									if(p.location)
										= p.location
					br
					.line-purple
			else
				for e in search.results
					mixin eventItem(e)