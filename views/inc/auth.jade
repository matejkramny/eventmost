form.form-horizontal.form-horizontal-short(action='/auth/password', method='POST', accept-charset='utf-8')
	input(type="hidden", name="_csrf", value=token)
	.page-header.moveLeft.moveRight
		h1 Log in / Register
	.control-group
		label.control-label(for="email") E-Mail
		.controls
			input#email(name='login', placeholder='Your E-Mail address', maxlength='128', type='email', required, tabindex=1)
	.control-group
		label.control-label(for="password") Password
		.controls
			input#password(name='password', placeholder='Password', type='password', required, tabindex=2)
	.control-group.noBottomMargin
		input.btn.btn-large.btn-block.btn-red(type='submit', value='Log in / Register', tabindex=3)