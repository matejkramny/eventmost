form.form-horizontal.form-horizontal-short(action='/register', method='POST', accept-charset='utf-8')
	.page-header.moveLeft.moveRight
		h1 Register
	.control-group
		label.control-label Full Name
		.controls
			input.span10(name='name', placeholder='What is your name?', maxlength='128', type='text', required)
	.control-group
		label.control-label E-Mail
		.controls
			input.span10(name='email', placeholder='Your E-Mail address', maxlength='128', type='email', required)
	.control-group
		label.control-label Password
		.controls
			input.span10(name='password', placeholder='Password', type='password', required)
	.control-group.noBottomMargin
		input.btn.btn-large.btn-block.btn-red(type='submit', value='Register for free')