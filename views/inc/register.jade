form.form-horizontal.form-horizontal-short(action='/register', method='POST', accept-charset='utf-8')
	.page-header.moveLeft.moveRight
		h1 Register
	.control-group
		label.control-label(for="regName") Full Name
		.controls
			input#regName(name='name', placeholder='What is your name?', maxlength='128', type='text', required)
	.control-group
		label.control-label(for="regEmail") E-Mail
		.controls
			input#regEmail(name='email', placeholder='Your E-Mail address', maxlength='128', type='email', required)
	.control-group
		label.control-label(for="regPassword") Password
		.controls
			input#regPassword(name='password', placeholder='Password', type='password', required)
	.control-group.noBottomMargin
		input.btn.btn-large.btn-block.btn-red(type='submit', value='Register for free')